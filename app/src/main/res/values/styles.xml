<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorBlack</item>

    </style>

    <style name="CustomAppTheme_1" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPink</item>
        <item name="colorPrimaryDark">@color/colorPinkishRed1</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="android:fontFamily">Consolas</item>

    </style>

    <style name="CustomAppTheme_2" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlueDark</item>
        <item name="colorAccent">@color/colorPinkishRed1</item>
        <item name="colorControlActivated">@color/colorBlueDark</item>
    </style>


    <style name="CustomAppTheme_3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorBlueDark</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">#F06292</item>
        <item name="colorControlActivated">@color/colorBlack</item>
    </style>

    <style name="CustomAppTheme_4" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorBlack</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="CustomAppTheme_5" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorBlueDark</item>
        <item name="colorControlActivated">@color/colorRipplePrimary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>

    </style>



    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

</resources>
